<div class="comments">

<table class='table'>
<% book.book_comments.each do |book_comment| %>
<tr>
  <td><%= link_to user_path(book.user) do %>
  <%= attachment_image_tag(current_user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
  <%= book_comment.user.name %>
  <% end %></td>
  <td> <%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
  <td> <%= book_comment.comment %></td>
  <td>
  <% if book_comment.user == current_user %>
    <div class="comment-delete">
    <%= link_to "Delete", book_book_comment_path(book_comment), method: :delete, class: "btn btn-sm btn-danger destroy_book_#{book.id}" %>
    </div>
  <% end %></td>
<% end %>
</div>
</tr>
</table>
<div class="new-comment"> <%= render 'layouts/errors', obj: @book %>
<%= form_with(model:[book, book_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'10', cols:'100%',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>