<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
    <%= render 'users/info', user: current_user %>
    <h2 class="mt-3">New book</h2>
    <%= render 'books/form1', book: @book %></div>
      <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.name %></td>
        <% @user ||= current_user %>
          <div class="stats">
            <td><a href="<%= user_following_path(user) %>">
              <strong id="following" class="stat">
                <%= user.followings.count %>
              </strong>
              following
            </a></td>
            <td><a href="<%= user_followers_path(user) %>">
              <strong id="followers" class="stat">
                <%= user.followers.count %>
              </strong>
              followers
            </a>
          </div></td>
            <!--フォロー解除ボタン-->
        <td><% if current_user.following?(user) %>
              <%= form_with model: @relationship, url: user_relationships_path(user), method: :delete, local: true do |f| %>
              <%= f.hidden_field :follow_id, value: user.id  %>
              <%= f.submit "フォロー解除" %>
              <% end %>
              <!--フォローボタン-->
            <% else %>
            <%= form_with model: @set_relationship, url: user_relationships_path(user), local: true do |f| %>
              <%= f.hidden_field :follow_id, value: user.id %>
              <%= f.submit "フォロー"%></td>
              <% end %>
            <% end %>
        <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 </div>
  </div>
</div>