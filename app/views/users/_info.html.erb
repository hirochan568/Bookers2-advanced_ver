<table class='table'>
  
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
    <tr><div class="stats">
	  <th>フォロー数：</th>
	  <th><a href="<%= user_following_path(user) %>">
              <strong id="following" class="stat">
                <%= user.followings.count %></th>
  </tr>
  <tr>
	  <th>フォロワー数：</th>
	  <th><a href="<%= user_followers_path(user) %>">
              <strong id="followers" class="stat">
                <%= user.followers.count %></th></div>
  </tr>
  <tr>
    <th><% if current_user.following?(user) %>
        <%= form_with model: @relationship, url: user_relationships_path(user), method: :delete, local: true do |f| %>
        <%= f.hidden_field :follow_id, value: user.id  %>
        <%= f.submit "フォロー解除" %>
        <% end %>
      　<!--フォローボタン-->
        <% else %>
        <%= form_with model: @set_relationship, url: user_relationships_path(user), local: true do |f| %>
        <%= f.hidden_field :follow_id, value: user.id %>
        <%= f.submit "フォロー"%></td>
      　<% end %>
      <% end %>
    </th>
  </tr>
</table>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>